<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog.txt">
  <!-- 启用asp.net核心布局渲染器 -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore" />
    <add assembly="Exceptionless.NLog" />
  </extensions>

  <!--变量-->
  <variable name="variable"
    value="
	  ${newline}date:${date}
	  ${newline}level:${level}
	  ${newline}logger:${logger}
	  ${newline}machinename:${machinename}
	  ${newline}message:${message}
	  ${newline}appdomain:${appdomain}
	  ${newline}assembly-version:${assembly-version}
	  ${newline}basedir:${basedir}
	  ${newline}callsite:${callsite}
	  ${newline}callsite-linenumber:${callsite-linenumber}
	  ${newline}counter${counter}
	  ${newline}nlogdir:${nlogdir}
	  ${newline}processid:${processid}
	  ${newline}processname:${processname}
	  ${newline}specialfolder:${specialfolder}
	  ${newline}stacktrace: ${stacktrace}
    ${newline}" />

  <!--输出日志的配置，用于rules读取-->
  <targets>
    <!-- 写到文件 -->
    <target xsi:type="File" name="file" fileName="${currentdir}/Logs/${date:format=yyyy-MM}/${shortdate}.log"
				layout="
				时间: ${longdate}${newline}
				路由: ${aspnet-request-url}${newline}
				级别: ${level}${newline}
				信息: ${message}${newline}
				堆栈跟踪信息: ${exception:format=tostring}${newline}
				${newline}
				************************************************
				${newline}"
				keepFileOpen="true" />

    <!-- 输出到控制台 -->
    <target xsi:type="Console" name="console"
        layout="
				时间: ${longdate}${newline}
				路由: ${aspnet-request-url}${newline}
				级别: ${level}${newline}
				信息: ${message}${newline}
				堆栈跟踪信息: ${exception:format=tostring}${newline}
				${newline}
				************************************************
				${newline}"
				keepFileOpen="true"/>

    <!-- 输出到数据库 -->
    <target xsi:type="Database"
     name="database"
     dbProvider="System.Data.SqlClient"
		 connectionString="Server=127.0.0.1;Database=SFBMS;uid=sa;pwd=123456">
      <commandText>
        insert into NLogInfo([Date],[origin],[Level],[Message],[Detail]) values (getdate(),@origin,@logLevel,@message,@detail);
      </commandText>
      <!--日志来源-->
      <parameter name="@origin" layout="${callsite}" />
      <!--日志等级-->
      <parameter name="@logLevel" layout="${level}" />
      <!--日志消息-->
      <parameter name="@message" layout="${message}" />
      <!--引用variable信息-->
      <parameter name="@detail" layout="${variable}" />
    </target>
  </targets>
  <!-- 目标规则 -->
  <rules>
    <!--设定了一个Information的路由, 指向了allfile名称的目标 -->
    <logger name="*" minlevel="Information" writeTo="file">
      <filters>
        <when condition="starts-with(logger, 'Microsoft')" action="Ignore" />
      </filters>
    </logger>
    <!--设定了一个Error的路由, 指向了console名称的目标 -->
    <logger name="*" minlevel="Error" writeTo="console">
      <filters>
        <when condition="starts-with(logger, 'Microsoft')" action="Ignore" />
      </filters>
    </logger>
    <!--指向了一个database名称的目标 -->
    <logger name="*" levels="Warn,Error"  writeTo="database"/>
  </rules>
</nlog>